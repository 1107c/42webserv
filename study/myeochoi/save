server {
    host 127.0.0.1;                  
    listen 8000;                     
    server_name webserv;             
    client_max_body_size 10M;       
    error_page /var/www/error.html; 


  
    location / {
        root /var/www/html;         
        index index.html;            
        methods GET;                 
        autoindex on;              
    }


    location /upload {
        root /var/www/uploads;      
        methods POST;                
    }

    location /cgi-bin/ {
        root /var/www/cgi-bin;      
        index index.py;              
        methods GET POST DELETE;   
        autoindex off;          
        cgi_path /usr/bin/python3;
        }
}
